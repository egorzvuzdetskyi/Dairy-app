{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"baseUrl": "./src",
		"paths": {
			"@services/*": [
				"app/services/*"
			],
			"@components/*": [
				"app/components/*"
			],
			"@modules/*": [
				"app/modules/*"
			],
			"@models/*": [
				"app/models/*"
			],
			"@pages/*": [
				"app/pages/*"
			],
			"@routes/*": [
				"app/routes/*"
			],
			"@environments/*": [
				"environments/*"
			],
			"@helpers/*": [
				"helpers/*"
			]
		},
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	}
}
